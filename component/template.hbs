<section class="horizontal-form">

  {{#accordion-list showExpandAll=false as | al expandFn |}}
  {{#accordion-list-item title=accessTitle
    detail=accessDetail
    expandAll=expandAll
    expand=(action expandFn)
    expandOnInit=true
  }}

  <div class="row">

    <div class="col span-6">
      <label class="acc-label">{{t 'clusterNew.civo.apiKey.label'}}{{field-required}}</label>
      {{#input-or-display editable=(or (eq mode "new") eq mode "editing") value=cluster.civoEngineConfig.apiKey}}
      {{input type="text" name="apiKey" classNames="form-control" placeholder=(t 'clusterNew.civo.apiKey.placeholder') value=cluster.civoEngineConfig.apiKey}}
      {{/input-or-display}}
    </div>

  </div>
  <div class="row">

    <div class="col span-6">
      <label class="acc-label pt-5">{{t "clusterNew.civo.secretKey.label"}}{{field-required}}</label>
    </div>
    {{input-text-file
        classNames="box"
        value=cluster.civoEngineConfig.privateKeyContents
        multiple=False
        canChangeName=false
        accept="text/plain,.pem,.pkey,.key"
        minHeight=40
        placeholder="clusterNew.civo.secretKey.placeholder"
        shouldChangeName=false
        concealValue=true
      }}

  </div>
  {{/accordion-list-item}}


  {{#if (and refresh (eq step 1))}}
  {{save-cancel editing=(eq mode 'edit')
        save="authenticateOCI"
        cancel=close
        saveDisabled=canAuthenticate
        createLabel="clusterNew.civo.access.next"
        savingLabel="clusterNew.civo.access.loading"
    }}
  {{/if}}

  {{#if (and (gte step 2) (eq mode 'edit'))}}
  {{#accordion-list-item title=clusterTitle
        detail=clusterDetail
        showExpand=false
        expandOnInit=true
        expandAll=al.expandAll
        expand=(action expandFn)
      }}
  <div class="row">

    <div class="col span-4">
      <label class="acc-label">{{t 'clusterNew.civo.version.label'}}</label>
      {{#input-or-display editable=(or (eq mode "new") eq mode "editing") value=selectedk8sVersion}}
      {{new-select class="form-control"
                           content=k8sUpgradeVersionChoices
                           value=cluster.civoEngineConfig.kubernetesVersion
              }}
      {{/input-or-display}}
    </div>


    <div class="col span-4">
      <label class="acc-label">{{t 'clusterNew.civo.quantityPerSubnet.label'}}</label>
      {{#input-or-display editable=(or (eq mode "new") eq mode "editing") value=cluster.civoEngineConfig.quantityPerSubnet}}
      {{input-integer min=1 max=maxNodeCount value=cluster.civoEngineConfig.quantityPerSubnet classNames="form-control" placeholder=(t 'clusterNew.civo.quantityPerSubnet.placeholder')}}
      <p class="help-block">
        {{t 'clusterNew.civo.quantityPerSubnet.help'}}
      </p>
      {{/input-or-display}}
    </div>

  </div>

  {{/accordion-list-item}}

  {{!-- exit point for update/upgrade --}}
  {{#if refresh}}
  {{save-cancel editing=(eq mode 'edit')
            save="upgradeCluster"
            cancel=close
        }}
  {{/if}}

  {{else}}
  {{#if (gte step 2)}}
  {{#accordion-list-item title=clusterTitle
        detail=clusterDetail
        showExpand=false
        expandOnInit=true
        expandAll=al.expandAll
        expand=(action expandFn)
      }}

  <div class="row">
    <div class="col span-6 mb-0">
      <label class="acc-label">{{t 'clusterNew.civo.version.label'}}</label>
      {{#input-or-display editable=(and (eq step 2) isNew) value=selectedk8sVersion}}
      {{new-select class="form-control"
                           content=k8sVersionChoices
                           value=cluster.civoEngineConfig.kubernetesVersion
              }}
      {{/input-or-display}}
    </div>

    <div class="col span-6 mb-0">
      <label class="acc-label">{{t 'clusterNew.civo.quantityPerSubnet.label'}}</label>
      {{#input-or-display editable=(and (eq step 2) isNew) value=cluster.civoEngineConfig.quantityPerSubnet}}
      {{input-integer min=1 max=maxNodeCount value=cluster.civoEngineConfig.quantityPerSubnet classNames="form-control" placeholder=(t 'clusterNew.civo.quantityPerSubnet.placeholder')}}
      <p class="help-block">
        {{t 'clusterNew.civo.quantityPerSubnet.help'}}
      </p>
      {{/input-or-display}}
    </div>

  </div>
  {{/accordion-list-item}}
  {{#if (and refresh (eq step 2))}}
  {{save-cancel editing=(eq mode 'edit')
            save="loadNodeConfig"
            cancel=close
            createLabel="clusterNew.civo.cluster.next"
            savingLabel="clusterNew.civo.cluster.loading"
        }}
  {{/if}}
  {{/if}}
  {{#if (gte step 3)}}
  {{#accordion-list-item title=virtualCloudNetworkTitle
          detail=virtualCloudNetworkDetail
          showExpand=false
          expandOnInit=true
          expandAll=al.expandAll
          expand=(action expandFn)
      }}


  <div class="row">

    <div class="col span-6">
      {{#input-or-display
         editable=(not-eq mode "view")
         value=(if vcnCreationMode (t "generic.enabled") (t "generic.disabled"))
      }}
      <div class="radio">
        <label>
          {{radio-button
              selection=vcnCreationMode
              value="Quick"
              disabled=(if multipleRegistries true false)
            }}
          {{t 'clusterNew.civo.subnetAccessOptions.quick'}}
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button
              selection=vcnCreationMode
              value="Existing"
              disabled=(if multipleRegistries true false)
            }}
          {{t 'clusterNew.civo.subnetAccessOptions.existing'}}
        </label>
      </div>
      <div class="radio">
        <label>
          {{radio-button
              selection=vcnCreationMode
              value="Custom"
              disabled=(if multipleRegistries true false)
            }}
          {{t 'clusterNew.civo.subnetAccessOptions.custom'}}
        </label>
      </div>

      {{#if (eq vcnCreationMode "Custom")}}
      <div class="row">
        <div class="col span-6">
          <label class="acc-label">{{t 'clusterNew.civo.subnet.label'}}{{field-required}}</label>
          {{#input-or-display editable=(and (eq step 3) isNew) value=selectedSubnet}}
          {{searchable-select class="form-control"
                content=subnetAccessChoices
                value=cluster.civoEngineConfig.subnetAccess
              }}
          {{/input-or-display}}
        </div>

        <div class="col span-6">
          <label class="acc-label">{{t 'clusterNew.civo.cidr.label'}}</label>
          {{#input-or-display editable=(and (eq step 3) isNew) value=cluster.civoEngineConfig.vcnCidr}}
          {{input type="text" classNames="form-control" placeholder=(t 'clusterNew.civo.cidr.placeholder') value=cluster.civoEngineConfig.vcnCidr}}
          {{/input-or-display}}
        </div>
      </div>
      {{/if}}

      {{#if (eq vcnCreationMode "Existing")}}
      <div class="row">
        <div class="col span-6">
          <label class="acc-label">{{t 'clusterNew.civo.existingVCNDetails.compartmentOCID'}}</label>
          {{#input-or-display editable=(and (eq step 3) isNew) value=cluster.civoEngineConfig.vcnCompartmentId}}
          {{input type="text" classNames="form-control" placeholder=(t 'clusterNew.civo.existingVCNDetails.compartmentOCIDPlaceholder') value=cluster.civoEngineConfig.vcnCompartmentId}}
          <p class="help-block">{{t "clusterNew.civo.existingVCNDetails.compartmentOCIDHelp" }}</p>
          {{/input-or-display}}
        </div>

        <div class="col span-6">
          <label class="acc-label">{{t 'clusterNew.civo.existingVCNDetails.vcnName'}}{{field-required}}</label>
          {{#input-or-display editable=(and (eq step 3) isNew) value=cluster.civoEngineConfig.vcnName}}
          {{input type="text" classNames="form-control" placeholder=(t 'clusterNew.civo.existingVCNDetails.vcnNamePlaceholder') value=cluster.civoEngineConfig.vcnName}}
          {{/input-or-display}}
        </div>
      </div>
      <div class="row">
        <div class="col span-6">
          <label class="acc-label">{{t 'clusterNew.civo.existingVCNDetails.lbSubnetName1'}}{{field-required}}</label>
          {{#input-or-display editable=(and (eq step 3) isNew) value=cluster.civoEngineConfig.loadBalancerSubnetName1}}
          {{input type="text" classNames="form-control" placeholder=(t 'clusterNew.civo.existingVCNDetails.lbSubnetName1Placeholder') value=cluster.civoEngineConfig.loadBalancerSubnetName1}}
          {{/input-or-display}}
        </div>

        <div class="col span-6">
          <label class="acc-label">{{t 'clusterNew.civo.existingVCNDetails.lbSubnetName2'}}</label>
          {{#input-or-display editable=(and (eq step 3) isNew) value=cluster.civoEngineConfig.loadBalancerSubnetName2}}
          {{input type="text" classNames="form-control" placeholder=(t 'clusterNew.civo.existingVCNDetails.lbSubnetName2Placeholder') value=cluster.civoEngineConfig.loadBalancerSubnetName2}}
          {{/input-or-display}}
        </div>

      </div>
      {{/if}}
      {{/input-or-display}}
    </div>

  </div>

  {{/accordion-list-item}}
  {{#if (and refresh (eq step 3))}}
  {{save-cancel editing=(eq mode 'edit')
            save="loadInstanceConfig"
            cancel=close
            saveDisabled=canSaveVCN
            createLabel="clusterNew.civo.node.next"
            savingLabel="clusterNew.civo.node.loading"
        }}
  {{/if}}
  {{/if}}
  {{#if (gte step 4)}}
  {{#accordion-list-item title=instanceTitle
          detail=instanceDetail
          showExpand=false
          expandOnInit=true
          expandAll=al.expandAll
          expand=(action expandFn)
      }}
  <div class="row">


    <div class="row">
      <div class="col span-6">
        <label class="acc-label">{{t 'clusterNew.civo.nodeShape.label'}}{{field-required}}</label>
        {{#input-or-display editable=(and (eq step 4) isNew) value=selectednodeShape}}
        {{searchable-select class="form-control"
                                    content=nodeShapeChoices
                                    value=cluster.civoEngineConfig.nodeShape
                }}
        {{/input-or-display}}
      </div>

      <div class="col span-6">
        <label class="acc-label">{{t 'clusterNew.civo.os.label'}}</label>
        {{#input-or-display editable=isNew value=selectedImage}}
        {{searchable-select class="form-control"
                                    content=imageChoices
                                    value=cluster.civoEngineConfig.nodeImage
                }}
        {{/input-or-display}}
      </div>

    </div>

    <div class="row">

      <div class="col span-4">
        <label class="acc-label pt-5">{{t "clusterNew.civo.nodeSSHKey.label"}}</label>
      </div>
      {{input-text-file
        classNames="box"
        value=cluster.civoEngineConfig.nodePublicKeyContents
        multiple=False
        canChangeName=false
        accept="text/plain,.pem,.pub,.key"
        minHeight=40
        placeholder="clusterNew.civo.nodeSSHKey.placeholder"
        shouldChangeName=false
        concealValue=false
      }}

    </div>



  </div>

  {{/accordion-list-item}}
  {{#if (and refresh (eq step 4))}}
  {{save-cancel editing=(eq mode 'edit')
          saveDisabled=canCreateCluster
          save="save"
          cancel=close
      }}
  {{/if}}
  {{/if}}
  {{/if}}


  {{top-errors errors=errors}}
  {{top-errors errors=otherErrors}}
  {{top-errors errors=clusterErrors}}
  {{/accordion-list}}
</section>